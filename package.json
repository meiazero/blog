{
  "name": "blog",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "infra:up": "docker-compose -f infra/docker-compose.yaml up -d || docker compose -f infra/docker-compose.yaml up -d",
    "infra:down": "docker-compose -f infra/docker-compose.yaml down || docker compose -f infra/docker-compose.yaml down",
    "infra:clean": "docker-compose -f infra/docker-compose.yaml down --rmi all || docker compose -f infra/docker-compose.yaml down --rmi all",
    "env:generate": "cp .env.example .env",
    "prisma:migrate": "prisma migrate dev",
    "format": "prettier --write \"**/*.{js,ts,tsx,md}\"",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@t3-oss/env-nextjs": "^0.7.1",
    "clsx": "^2.0.0",
    "lucide-react": "^0.299.0",
    "next": "13.5.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.1",
    "tailwind-merge": "^2.1.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "13.5.5",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "prisma": "^5.7.1",
    "tailwindcss": "^3.3.7",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}